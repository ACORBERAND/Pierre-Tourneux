---
import MobileHeader from "../components/MobileHeader.astro";
import SideBar from "../components/SideBar.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/assets/images/favicon.svg" />
		<!--Google font K2D -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Almarai:wght@300;400;700;800&family=K2D:wght@100;200;300;400;500;600;700;800&display=swap" rel="stylesheet">
		
		<meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
		<section class="container">
        <MobileHeader />
		<SideBar />
		</section>
		<slot />
		<div class="container_return">
			<button id="return-to-top" class="return">
				<img src="#" alt="icone flèche">
			</button>
		</div>
        <Footer />

        <script>
			const dateElement = document.getElementById("date");
			if (dateElement) {
				dateElement.textContent = new Date().getFullYear().toString();
			};
		</script>

		<!--bouton return to top -->
		<script>
			const btn = document.getElementById("return-to-top");

			if (btn){
			btn.addEventListener('click', () => {
			window.scrollTo({
			top: 0,
			behavior: 'smooth' // Pour un défilement fluide
			});

			})};
		</script>

    </body>
</html>

<!--Mobile First -->

<style lang="scss">
	//Déclaration des variables couleur
	$Black: #000;
	$Orange: #CF6326;
	//container
	html{
		position: relative;
		max-width:100%;
	}
	body{
		margin: 0px;
	}
	.container{
		margin-right: 4.6%;
		margin-left: 4.6%;
		max-width: 1550px;
	}
	.container_return{
				width: 97vw;
				display: flex;
				justify-content: center;
				padding-bottom: 2rem;
				@media (min-width: 660px){
				justify-content: flex-end;
				align-items: center;
				}
				.return{
					width: 100%;
					display: flex;
					justify-content: center;
					align-items: center;
					width: 35px;
					height: 35px;
					border-radius: 50%;
					background: transparent;
					bottom: 100px;
					margin-right: 4%;
					border: 1px solid $Black;
					cursor: pointer;
					transition: 0.2s;
					@media (min-width: 660px){
					display: flex;
					position: fixed;
					justify-content: center;
					align-items: center;
					z-index: 5;
					}
					img{
						width: 15px;
						height: 17px;
						transform: rotate(180deg);
						transition: 0.2s;
					}
					&:hover{
						transition: 0.2s;
						border: 3px solid $Black;
						img{
							transition: 0.2s;
							transform: rotate(135deg);
						}
					}
				}
      		}

	
</style>