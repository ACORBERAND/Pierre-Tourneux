import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import ButtonFilled from "../components/ButtonFilled.astro";
import ButtonFilled2 from "../components/ButtonFilled2.astro";
import ButtonFilledWhtie from "../components/ButtonFilledWhite.astro";
import ButtonFilledBlack from "../components/ButtonFilledBlack.astro";
---

<!-- Améliorer les performance de la map -->

<BaseLayout title="accueil" description="#">
	<Header title="Cabinet d'ostéopathe" description="de Pierre TOURNEUX"></Header>

	<!-- Partie accès rapide -->
	<div class="container">
		<section class="rapidAccess">
			<!-- Première card "Contact" des trois cards dans cette section -->
			<div class="rapidAccessBox" id="rapidAccessBox1">
				<!-- Icone que contient la card -->
				<div class="containerBox">
					<div class="imgAccessBox">
						<img src="#" alt="Icone Contact">
