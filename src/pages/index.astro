<style lang="scss">
    /*variable couleur*/
	$Orange: #FF9A60;
	$BlueOne: #344E4C;
	$BlueTwo: #2A5855;
	$BlueThree: #21625E;

	/*def des textes*/
	h1{
		font-family: 'K2D', sans-serif;
	}
	h2{
		font-family: 'K2D', sans-serif;

		@media (min-width: 780px) {
			font-size: 48px;
		}
	}
	h3{
		font-family: 'K2D', sans-serif;
		margin: 0;
		@media (min-width: 780px) {
			font-size: 32px;
		}
	}
	p{
		font-family: 'K2D', sans-serif;
		font-weight: 200;
		font-size: 14px;
		@media (min-width: 780px) {
			font-size: 18px;
		}
	}
		.container{
		margin-right: 4.6%;
		margin-left: 4.6%;
		max-width: 1550px;
	}
	/* Premier bloc de la page, le bloc d'accès rapide */ 
	.rapidAccess{
		position: relative;
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: flex-start;
		flex-wrap: wrap;
		margin-top: 100px;
		@media (min-width: 780px) {
			margin-top: 200px;
		}
		/*style de la première card de la section accès rapide*/
		.rapidAccessBox{
			display: flex;
			max-width: 287px;
			height: 241.5px;
			margin-bottom: 16px;
			@media (min-width: 780px) {
				max-width: 410px;
				height: 345px;
			}
			.containerBox{
				margin-left: 16px;
				color: #fff;
				background: linear-gradient(to right, transparent 75%, rgb(0, 0, 0, .40));
				@media (min-width: 780px) {
					margin-left: 35px;
				}
				.imgAccessBox{
					width: 40px;
					height: 40px;
					padding-top: 16px;
					padding-bottom: 16px;
					@media (min-width: 780px) {
					width: 70px;
					height: 70px;
					padding-top: 35px;
					}
					img{
						width: 100%;
						height: 100%;
					}
				}

				p{	
					height: auto;
					margin: 8px 0;
					width: 90%;
					@media (min-width: 780px) {
					height: 69px;
					}
				}
				.btnCard{
					@media (max-width: 780px) {
						margin-top: 32px;
					}
				}

			}
		}
		#rapidAccessBox1{
			background: $BlueOne;
			border-radius: 4px;
			@media (min-width: 648px) {
				border-radius: 4px 0 0 4px;
			}
			.containerBox{
				border-radius: 0 4px 4px 0;
				@media (min-width: 648px) {
					border-radius: 0;
				}
			}
		}
		#rapidAccessBox2{
			background: $BlueTwo;
			border-radius: 4px;
			@media (min-width: 648px) {
				border-radius: 0 4px 4px 0;
			}
			.containerBox{
				border-radius: 0 4px 4px 0;
				@media (min-width: 1200px) {
					border-radius: 0;
				}
			}
		}
		#rapidAccessBox3{
			background: $BlueThree;
			border-radius: 4px;
			@media (min-width: 1200px) {
				border-radius: 0 4px 4px 0;
			}
			.containerBox{
				border-radius: 0 4px 4px 0;
			}
		}
	}
	/* Le deuxième bloc, Vos practiciens*/
	.vosPracticiens{
		position: relative;
		padding: 200px 0;
		text-align: center;
		h2{
			padding-bottom: 64px;
		}
		.containerCardPracticiens{
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			gap: 32px;
			@media (min-width: 810px) {
				flex-direction: row;
				justify-content: space-between;
				align-items: center;
				flex-wrap: wrap;
				gap: 64px;	
			}
			.containerCardPracticiens1{
				display: flex;
				align-items: flex-end;
				justify-content: center;
				width: 315px;
				height: 500px;
				background-image: url(/public/pierreTourneux.webp);
				background-repeat: no-repeat;
				background-size: cover;
				background-position: center;
				border-radius: 4px;
			}
			.blocBlurCard{
				display: flex;
				flex-direction: column;
				justify-content: start;
				align-items:flex-start;
				width: 315px;
				height: 225px;
				background: rgb(52, 78, 76, .60);
				backdrop-filter: blur(6px);
				border-radius: 0 0 4px 4px;
				h3{
					margin: 8px 12px;
					color: #fff;
				}
				p{
					margin: 8px 12px;
					text-align: start;
					color: #fff;
				}
				a{
					margin: 0px 12px;
				}
			}
		}
		.infoPracticiens{
			div{
				padding-top: 32px;
				padding-bottom: 16px;
			}
		}
	}
	/* Le troisème bloc  */
	.cabinetLieux{
		position: relative;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		h2{
			margin: 0;
			margin-bottom: 32px;
		}
		a{
			color: #000;
		}
		.map{
			border-radius: 4px;
		}
		.responsiveMap{
			@media (max-width: 668px) {
				width: 250px;
				height: 200px;
			}
		}
	}
</style>
